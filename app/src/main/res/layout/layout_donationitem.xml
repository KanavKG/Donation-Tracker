<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum = "100">

    <TextView
        android:id="@+id/donationNameText"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="end"
        android:paddingRight="30dip"
        android:text="Donation Name"
        android:textAlignment="viewStart"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/donationValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="316dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="end"
        android:paddingRight="30dip"
        android:text="$ Value"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="13sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/donationDescText"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donationValueText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="-2dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Description"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donationValueText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="-34dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Category"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="11sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/donationImg"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignBottom="@+id/donationValueText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="-15dp"
        app:srcCompat="@drawable/ic_1appliances" />

</RelativeLayout>