<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum = "100">

    <TextView
        android:id="@+id/donationNameText"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif-condensed"
        android:paddingEnd="30dip"
        android:text="Donation Name"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorPrimary"
        android:textSize="17sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/donationValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="316dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="end"
        android:paddingEnd="30dip"
        android:text="$ Value"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="13sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/donationDescText"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_below="@+id/donationValueText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="-30dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Description"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donationValueText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Category"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/donationImg"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/donationValueText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-2dp"
        app:srcCompat="@drawable/ic_1appliances"
        android:contentDescription="Donation Category Logo" />

</RelativeLayout>